<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#232227">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:src="@drawable/thetecheye"
                android:layout_marginLeft="20dp"
                android:scaleType="centerInside"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Tech Eye"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="@dimen/dimen_8"
                android:layout_marginBottom="10dp"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The eye on your property"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="10dp"></TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"></LinearLayout>


        <TextView
            android:id="@+id/nav_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/home"
            android:drawablePadding="16dp"
            android:padding="10dp"
            android:textSize="22dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"></TextView>


        <TextView
            android:id="@+id/nav_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="16dp"
            android:textSize="22dp"
            android:padding="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="25dp"></TextView>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linear_nav_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/profile_sub_menu"></include>

        </LinearLayout>

        <TextView
            android:id="@+id/nav_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/setting"
            android:drawablePadding="16dp"
            android:textSize="22dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="10dp"
            android:layout_marginTop="25dp"></TextView>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linear_nav_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/setting_sub_menu"></include>

        </LinearLayout>

        <TextView
            android:id="@+id/nav_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ringing"
            android:drawablePadding="16dp"
            android:textSize="22dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="10dp"
            android:layout_marginTop="25dp"></TextView>

        <TextView
            android:id="@+id/nav_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/power"
            android:drawablePadding="16dp"
            android:textSize="22dp"
            android:padding="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"></TextView>


    </LinearLayout>

</ScrollView>